<!DOCTYPE html>
<html>

<head>
    <title>Comments</title>
    <%- include('styles'); -%>
    <link rel='stylesheet' href='/stylesheets/style.css' />
</head>

<body>
    <div class="section"></div>
    <main>
        <center>
                <div class="container">
            <div class="container feed-block-container">
                <div class="z-depth-2 feed-block">
                    <div class='row'>
                        <div class="switch col s12">
                            <form method="post" enctype="multipart/form-data">
                                <% if (emailSetting == 1) { %>
                                <label>
                                    Do not send emails
                                    <input type="checkbox" name="email_enabled" checked="checked">
                                    <span class="lever"></span>
                                    Send emails
                                </label>
                                <% } else { %>
                                <label>
                                    Do not send emails
                                    <input type="checkbox" name="email_enabled">
                                    <span class="lever"></span>
                                    Send emails
                                </label>
                                <% } %>
                        </div>
                    </div>
                    <div class='row'>
                        <div class="switch col s12">
                            Profile pic:
                            <input type="file" name="avatar"><br>
                            Must be .png, .jpg, .jpeg.  Max 1024x1024, more square=better quality
                        </div>
                    </div>
                    <div class="row">
                        <div class="container">
                            <div class="input-field col s12">
                                <textarea name="description" id="description" class="materialize-textarea validate"
                                    data-length="500" maxlength="500"><%-about%></textarea>
                                <label for="description">About Me</label>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                            <h6><a href="/login/reset/change_password">Change password</a></h6>
                    </div>
                    <div class="row">
                        <button type='submit' name='btn_search'
                            class='col s2 offset-s6 btn btn-large waves-effect blue'>Submit</button>
                        <a class='col s2 offset-s2 btn btn-large waves-effect blue'
                            style="position: relative; right: 10px;" href="/profile/<%=id%>">Return</a>
                    </div>
                    <div class="row">
                            <%if (errors != '') { %>
                                <ul>
                                  <% for(var i = 0; i < errors.length; i++) {%>
                                 <li><%= errors[i].msg %></li>
                                 <% } %>
                                </ul>
                                <% } %>
                    </div>
                    </form>
                </div>
            </div>
            </div>
            </div>
        </div>
        </center>
    </main>
    <script>
        const textNeedCount = document.querySelector('#description');
        const textNeedCountInstance = new M.CharacterCounter(textNeedCount);
    </script>
</body>