<!DOCTYPE html>
<html>

<head>
    <title>Write</title>
    <%- include('styles'); -%>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <!-- Include stylesheet -->
    <link href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet">
</head>

<body>
    <div class="section"></div>
    <main>
        <center>
            <div class="container">
                <div class="row">
                    <h1>Write</h1>
                </div>
        </center>
        <div class="container" style="min-width: 95%;  padding: 3vh 0vh 0vh 0vh;">
            <div class="z-depth-2 row"
                style="display: inline-block; min-width: 100%; min-height: 70vh; padding: 2vh 2vh 1vh; border: 1px solid #EEE; background-color: #f3e5f5">
                <div class='row'>
                    <div class='input-field col s12'>
                        <input class='validate' type='text' name='title' id='title' />
                        <label for='title'>Create a title</label>
                    </div>
                </div>
                <!-- Create the editor container -->
                <div class='row' style="padding: 0vh 0vh 1vh;">
                    <div class='editor-wrapper'>
                        <div class="z-depth-2">
                            <div id="editor">
                                <p>Hello World!</p>
                                <p>Some initial <strong>bold</strong> text</p>
                                <p><br></p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class='row'>
                    <button type='submit' name='btn_search'
                        class='col s2 offset-s10 btn btn-large waves-effect indigo'>Submit</button>
                </div>
            </div>
        </div>

        <!-- Include the Quill library -->
        <script src="https://cdn.quilljs.com/1.3.6/quill.js"></script>

        <!-- Initialize Quill editor -->
        <script>
            var quill = new Quill('#editor', {
                theme: 'snow'
            });
        </script>
    </main>
</body>