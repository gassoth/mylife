<!DOCTYPE html>
<html>

<head>
    <title>Write</title>
    <%- include('styles'); -%>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <!-- Include stylesheet -->
    <link href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet">
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" type="text/javascript"></script>
</head>

<body>
    <div class="section"></div>
    <main>
        <center>
            <div class="container" style="margin-bottom: -15px;">
                <div class="row">
                    <h1>Write</h1>
                </div>
        </center>
        <div class="container" style="min-width: 95%;  padding: 3vh 0vh 0vh 0vh;">
            <form class="z-depth-2 row"
                style="display: inline-block; min-width: 100%; min-height: 70vh; padding: 2vh 2vh 1vh; border: 1px solid #EEE; background-color: #f3e5f5"
                method="post">
                <div class='row' style="margin-bottom: 5px;">
                    <div class='input-field col s12'>
                        <input class='validate' type='text' name='title' id='title' />
                        <label for='title'>Create a title</label>
                    </div>
                </div>
                <!-- Create the editor container -->
                <div class='row' style="padding: 0vh 0vh 1vh; max-width: 99%;">
                    <input name="postText" type="hidden">
                    <div class='editor-wrapper'>
                        <div class="z-depth-2">
                            <div id="editor">
                                <p>Hello World!</p>
                                <p>Some initial <strong>bold</strong> text</p>
                                <p><br></p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class='row'>
                    <button type='submit' name='btn_search'
                        class='col s2 offset-s10 btn btn-large waves-effect indigo'>Submit</button>
                </div>
            </form>
        </div>

        <!-- Include the Quill library -->
        <script src="https://cdn.quilljs.com/1.3.6/quill.js"></script>

        <!-- Initialize Quill editor -->
        <script>
            var quill = new Quill('#editor', {
                theme: 'snow'
            });
            var form = document.querySelector('form');
            form.onsubmit = function() {
            // Populate hidden form on submit
            var about = document.querySelector('input[name=postText]');
            about.value = JSON.stringify(quill.getContents());
            
            console.log("Submitted", $(form).serialize(), $(form).serializeArray());
            return true;
            };

        </script>
    </main>
</body>