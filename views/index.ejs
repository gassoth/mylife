<!DOCTYPE html>
<html>
  <head>
    <title>Landing!</title>
    <%- include('styles'); -%>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <div class="container">
      <div class="row">
	<div class="col s4 offset-s2">
	  <h1>
	    <span class="home">
	      MyLife
	    </span>
	  </h1>
	</div>

      </div>
      <div class="row">
	<div class="home-button">
	  <div class="col s3">
	    <a href="/feed" class="indigo lighten-3 waves-effect waves-light btn-large">Read</a>
	  </div>
	  <div class="col s3">
	    <a class="indigo lighten-3 waves-effect waves-light btn-large">Write</a>
	  </div>
	  <% if (user) { %>
		<% let link = '/profile/' + user.id; %>
	  <div class="col s3">
	    <a href="<%=link%>" class="indigo lighten-3 waves-effect waves-light btn-large">Profile</a>
	  </div>
	  <% } else { %>
	  <div class="col s3">
		<a href="/profile/1" class="indigo lighten-3 waves-effect waves-light btn-large">Profile</a>
	  </div>
      <% } %>
	  <div class="col s3">
	    <% if (user) { %>
	    <a href="/logout" class="indigo lighten-3 waves-effect waves-light btn-large">Logout</a>
	    <% } else { %>
	    <a href="/login" class="indigo lighten-3 waves-effect waves-light btn-large">Login</a>
	    <% } %>
	  </div>
	</div>
      </div>
    </div>
    <hr class="line">
    <!--<p>Welcome to <%= title %></p>-->

  </body>
</html>
